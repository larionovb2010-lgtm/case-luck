            text-align: center;
            margin: 0;
            padding: 20px;
        }
        h1 {
            color: darkred;
        }
        #wheel {
            width: 300px;
            height: 300px;
            border-radius: 50%;
            border: 10px solid black;
            position: relative;
            overflow: hidden;
            margin: 20px auto;
        }
        .segment {
            width: 50%;
            height: 50%;
            position: absolute;
            transform-origin: 100% 100%;
            clip-path: polygon(0 0, 100% 0, 100% 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: white;
        }
        .segment:nth-child(1) { background-color: #ffd700; transform: rotate(0deg); }
        .segment:nth-child(2) { background-color: #ffcc00; transform: rotate(90deg); }
        .segment:nth-child(3) { background-color: #ffb300; transform: rotate(180deg); }
        .segment:nth-child(4) { background-color: #ffa500; transform: rotate(270deg); }
