<body>
<h1>Lucky Gold</h1>
<div id="wheel">
    <div class="segment">Золотой нож</div>
    <div class="segment">Автомат</div>
    <div class="segment">Пистолет</div>
    <div class="segment">Винтовка</div>
</div>
<button id="spinButton">Крутить колесо</button>
<div id="result"></div>
<script>
    const items = [
        { name: "Золотой нож", chance: 5 },
        { name: "Автомат", chance: 20 },
        { name: "Пистолет", chance: 45 },
        { name: "Винтовка", chance: 30 }
    ];
    function spinWheel() {
        const randomValue = Math.random() * 100;
        let cumulativeChance = 0;
        for (const item of items) {
            cumulativeChance += item.chance;
            if (randomValue < cumulativeChance) {
                return item.name;
            }
        }
    }
    document.getElementById("spinButton").addEventListener("click", function() {
        const result = spinWheel();
        // Вращение колеса
        const wheel = document.getElementById("wheel");
        wheel.style.transition = "transform 4s cubic-bezier(0.33, 1, 0.68, 1)";
        wheel.style.transform = rotate(${Math.random() * 360 + 720}deg); // минимум 2 оборота
        setTimeout(() => {
            document.getElementById("result").innerText = Вы выпали: ${result};
            wheel.style.transition = "none"; // сбросить плавность после завершения вращения
            wheel.style.transform = "rotate(0deg)"; // сбросить вращение для следующего раза
        }, 4000); // время вращения
    });
</script>
</body>
